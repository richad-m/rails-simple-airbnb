<p>Flats</p>
<div class="container">
  <div class="banner d-flex justify-content-between">
    <p>Simple Airbnb</p>
    <%= link_to  "Add a flat", new_flat_path %>
  </div>
  <h1 class = "mb-5">All our Flats (<%=@flats.count %>)</h1>
  <div class = "d-flex flex-wrap align-items-stretch">
  <% @flats.each do |flat| %>
    <div class="card mx-2 shadow mb-5 bg-white rounded " style="width: 350px"> 
      <img src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" alt="">
      <div class="card-details p-3 d-flex flex-column justify-content-between" style= "height:100%">
        <div>
          <h2 class = "font-weight-bold"><%= flat.name%></h2>
          <%= flat.address %>
          <div class="flat_number d-flex">
            <div class = "mx-2">
              <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
            </div>
            <div class = "mx-2">
              <i class="fas fa-user-friends"></i><%= flat.number_of_guests %>
            </div>
          </div>
        </div>
        <div class="my-2 show border-top d-flex justify-content-between">
          <%= link_to  "More info", flat_path(flat.id), class: "text-primary" %>
          <%= link_to  "Edit", edit_flat_path(flat.id) , class: "text-warning"%>
          <%= link_to "Delete",
            flat_path(flat.id),
            method: :delete,
            data: { confirm: "Are you sure?" } , class: "text-danger"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
